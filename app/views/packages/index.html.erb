<section id="our_packages">
  <div class="our_packages_top_border"></div>
  <div class="container">
    <div class="our_approach_title">Our Packages</div>
    <div class="our_approach_subtitle">Let’s get started! Choose the package that best fits your lifestyle and begin the
      journey to permanent healthier eating.
    </div>

    <% @packages.each do |package| %>
        <div class="col-md-4 col-sm-6">
          <div class="packages_box">
            <div class="packages_box_image"><img src="images/packages_img.png" alt=""></div>
            <div class="packages_title"><%= package.title %></div>
            <div class="packages_subtitle">
              <% unless package.title == "Package 3" %>
                  <%= package.start_date %>
              <% else %>
                  <%= "(coming soon!)" %>
              <% end %>
            </div>
            <div class="packages_price"><span class="packages_price_border"><%= package.cost %>
              <span class="packages_price_by_month">/ month</span></span></div>
            <ul class="all_packages_list">
              <li><%= package.description %></li>
            </ul>

            <button class="purchase_now_button">PURCHASE NOW</button>
          </div>
        </div>
    <% end %>
  </div>
