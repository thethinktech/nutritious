    <%= f.text_field :name, autofocus: true, required: true, :placeholder => "Name", class:'input-class' %><br>

    <%= f.label :City %><br>
    <%= f.text_field :city, autofocus: true, required: true, :placeholder => "City", class:'input-class' %><br>

    <%= f.label :Country %><br>
    <%= f.text_field :country, autofocus: true, required: true, :placeholder => "Country", class:'input-class' %><br>

    <%= f.label :Image %><br>
    <%= f.file_field :image %>
    

    
    <%= hidden_field_tag(:user_id,value=current_user.id)%>
    </div>
<br>
  <div class="actions">
    <%= f.submit 'Create Testimonial',class:'submit-class' %>
  </div>
<% end %>


